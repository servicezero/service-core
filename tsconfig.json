{
  "extends": "./src/typescript/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@service-core/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "./build/.transformers/typescript-transformer-export-mock.js",
      }
    ]
  },
  "include": [
    "src",
    "src/global.d.ts",
    "src/**/.*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/typescript"
  ]
}
